{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Serial Port Configuration",
    "type": "object",
    "required": ["serial_port", "baud_rate", "data_bits", "parity", "stop_bits"],
    "properties": {
      "serial_port": {
        "type": "string"
      },
      "baud_rate": {
        "type": "integer",
        "minimum": 9600,
        "maximum": 115200,
        "enum": [9600, 115200]
      },
      "data_bits": {
        "type": "integer",
        "enum": [5, 6, 7, 8]
      },
      "parity": {
        "type": "boolean"
      },
      "stop_bits": {
        "type": "integer",
        "enum": [1, 2]
      }
    }
  }